<!DOCTYPE html>
<html lang="en" class="lg:text-[95%] md:text-[85%] sm:text-[80%]">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        screens: {
          '2xl': { 'max': '1536px' },

          'xl': { 'max': '1280px' },

          'lg': { 'max': '1024px' },

          'md': { 'max': '768px' },

          'sm': { 'max': '576px' },
        },
        extend: {
          colors: {
            'primary-blue': '#48E0FD',
            'primary-blue-dark': '#03045e',
            'primary-blue-light': '#98edff',
          },
          fontFamily: {
            Nunito: ['Nunito', 'sans-serif']
          }
        }
      }
    }
  </script>
  <link rel="stylesheet" href="./style/contact.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="icon" type="image/x-icon" href="./Proj-Logo/favicon.png">
  <title>Titles Cart : Contact Us</title>
</head>

<body class="font-Nunito min-w-[36rem]">
  <!-- Wrapper Around The Whole Elements  -->
  <div class="wrapper w-11/12 m-auto md:w-10/12 pt-20">
    <%-include('./utils/header.ejs',{Home:false,About:false,Explore:false,Contact:true})%>
    <main>

      <div class="img-container"></div>
      <section class="main-heading container">
        <h1 class="font-bold">Contact Us</h1>
        <p class="font-semibold">Any question and remarks? Just write us a message!</p>
      </section>
      <section class="contact-us container">
        <div class="contact-info">
          <div class="contact-info-top">
            <h3 class="font-bold">Contact Information</h3>
            <p>
              Fill up the form and our Team will get back to you within 24
              hours.
            </p>
          </div>
          <div class="contact-info-contact">
            <ul>
              <li><i class="fa-solid fa-phone"></i> +0123 4567 8910</li>
              <li><i class="fa-solid fa-envelope"></i> help@bookdrive.com</li>
              <li>
                <i class="fa-solid fa-location-dot"></i> 102 Lajpat Nagar New
                Delhi
              </li>
            </ul>
          </div>
          <div class="social-handles">
            <ul>
              <li>
                <a href=""><i class="fa-brands fa-facebook"></i></a>
              </li>
              <li>
                <a href=""><i class="fa-brands fa-instagram"></i></a>
              </li>
              <li>
                <a href=""><i class="fa-brands fa-twitter"></i></a>
              </li>
              <li>
                <a href=""><i class="fa-brands fa-linkedin-in"></i></a>
              </li>
            </ul>
          </div>
        </div>
        <div class="contact-form">
          <form class="contact_form" method="" action="">
            <div>
              <h5>First Name</h5>
              <input type="text" name="fisrt_name" id="fname" placeholder="first name" />
            </div>
            <div>
              <h5>Last Name</h5>
              <input type="text" name="last_name" id="lname" placeholder="last name" />
            </div>
            <div>
              <h5>Email</h5>
              <input type="text" name="email" id="email" placeholder="email" />
            </div>
            <div>
              <h5>Phone</h5>
              <input type="text" name="phone" id="phone" placeholder="phone" />
            </div>
            <div class="contact-form-message">
              <h5>Message</h5>
              <textarea name="message" id="message" cols="30" rows="6"
                placeholder="wirte your message here..."></textarea>
            </div>
            <div class="contact-form-button">
              <button type="submit" class="submit-button">Submit</button>
            </div>
          </form>
        </div>
      </section>
    </main>
  </div>
  <div class="notifications-container flex flex-col items-start fixed top-28 right-12 gap-2">

  </div>
  <!-- footer -->
  <%-include('./utils/footer.ejs')%>

  <script src="./app.js"></script>
</body>

</html>