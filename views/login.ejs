<!DOCTYPE html>
<html lang="en" class="lg:text-[95%] md:text-[90%] sm:text-[85%]">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Titles Cart : Log In</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <base href="../public">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                screens: {
                    '2xl': { 'max': '1536px' },

                    'xl': { 'max': '1280px' },

                    'lg': { 'max': '1024px' },

                    'md': { 'max': '768px' },

                    'sm': { 'max': '576px' },
                },
                extend: {
                    colors: {
                        'primary-blue': '#48E0FD',
                        'primary-blue-dark': '#03045e',
                        'primary-blue-light': '#98edff',
                    }
                }
            }
        }
    </script>
    <link href="./login/signInCSS.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="./Proj-Logo/favicon.png">
</head>

<body class="min-w-[36rem] font-Nunito">
    <div class="w-11/12 m-auto md:w-10/12 pt-16">
        <%-include('./utils/header.ejs',{Home:false,About:false,Explore:false,Contact:false})%>

        <div class="fmain my-32">
            <div id="sgin">
                <br>
                <h2 class="text-4xl font-semibold mt-12">
                    Log in
                </h2>
            </div>
            <form autocomplete="off" action="">
                <div class="flex flex-col justify-center item-center text-center">
                    <input type="text" name="username" class="m-auto pl-8" placeholder="Your username ..."><br>
                    <input type="password" name="password" class="m-auto pl-8" placeholder="Your password ..."><br>
                    <input type="submit"
                        class="mx-auto mt-4 mb-6 shadow-gray-400 shadow-md hover:scale-110 active:scale-95 duration-300 ease-in-out"
                        value="Log In">
                    <a href="/register" class="text-blue-600 active:text-red-400">Not registered yet?</a>
                </div>
            </form>
            <div class="divider mt-6">or continue with</div>
            <div class="flex items-center justify-evenly">
                <button type="button" onclick="window.location.href='https://twitter.com';"
                    class="ggl mx-auto my-3 flex items-center justify-center">
                    <img src="./login/twitter.png" class="h-8" alt="">
                </button>
                <button type="button " onclick="window.location.href='google';" class="ggl mx-auto  my-3"></button>
                <button type="button" onclick="window.location.href='https://github.com';"
                    class="ggl mx-auto my-3 flex items-center justify-center">
                    <img src="./login/github.webp" class="h-10" alt="">
                </button>
            </div>
        </div>
    </div>
    <!-- footer -->
    <%-include('./utils/footer.ejs')%>
    <script>

    </script>
</body>

</html>